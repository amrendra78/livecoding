{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "livecoding": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "main": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [{ "glob": "**/*", "input": "public", "output": "/" }],
            "styles": ["src/styles.css"],
            "server": "src/main.server.ts",
            "outputMode": "server",
            "ssr": { "entry": "src/server.ts" }
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "500kB", "maximumError": "1MB" },
                { "type": "anyComponentStyle", "maximumWarning": "4kB", "maximumError": "8kB" }
              ],
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "production"
        },
        "prerender": {
          "builder": "@angular-builders/static-site:prerender",
          "options": {
            "browserTarget": "livecoding:build:production",
            "routes": ["/", "/signup", "/login", "/home"]
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": { "buildTarget": "livecoding:build:production" },
            "development": { "buildTarget": "livecoding:build:development" }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
